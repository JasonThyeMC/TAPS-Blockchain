<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.TAPS.blockchain.app"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF9800"
    android:orientation="vertical">

    <TextView
        android:text="Manage Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/balanceText"
        android:textSize="16dp"
        android:paddingBottom="0dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:id="@+id/manageBal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="42dp"
            android:fontFamily="sans-serif-light"
            android:id="@+id/balanceNumber" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix"
            app:srcCompat="@drawable/scale"
            android:layout_gravity="center_vertical"
            android:id="@+id/balanceRightIcon"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:text="Available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/availableText"
        android:textSize="16dp"
        android:fontFamily="sans-serif-thin"
        android:paddingRight="40dp"
        android:layout_gravity="right"
        android:paddingBottom="16dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/seeHistory"
        android:background="?selectableItemBackground">

        <TextView
            android:text="See Activity"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16dp"
            android:layout_weight="1"
            android:layout_height="72dp"
            android:paddingBottom="26dp"
            android:paddingTop="26dp"
            android:paddingLeft="16dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/scale"
            tools:ignore="MissingPrefix"
            android:layout_gravity="center_vertical"
            android:id="@+id/historyRightIcon"
            android:padding="8dp"
            android:adjustViewBounds="true"
            android:maxWidth="40dp"
            android:maxHeight="40dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>